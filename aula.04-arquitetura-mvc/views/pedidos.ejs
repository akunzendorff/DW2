<h1>Pedidos</h1>

<%# Comentário no EJS %> <%#= pedidos %>

<h4>ForEach sem tabela:</h4>
<% pedidos.forEach((pedido) =>{%> Produto: <%= pedido.produto %> <br />
Valor: <%= pedido.valor %> <br />
<br />
<%}) %>

<h4>forEach com tabela:</h4>
<table border="1">
  <tr>
    <th width="'150px">Produto:</th>
    <th>Preço:</th>
  </tr>
  <tr>
    <% pedidos.forEach((pedido) =>{%>
    <td><%= pedido.produto %></td>
    <td><%= pedido.valor %></td>
  </tr>
  <% })%>
</table>

